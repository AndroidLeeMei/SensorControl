<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.auser.sensorcontrol.AccMeterActivity">

    <TextView
        android:id="@+id/acc_TextView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/arrow_t"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDown"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="109dp"
        android:src="@drawable/arrow_d"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTop" />

    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="253dp"
        android:src="@drawable/arrow_l"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRight"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="246dp"
        android:src="@drawable/arrow_r"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
